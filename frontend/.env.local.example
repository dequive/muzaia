# frontend/.env.local.example
# Variáveis de ambiente para o frontend Next.js

# =============================================================================
# CONFIGURAÇÕES DA API
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=60000

# =============================================================================
# CONFIGURAÇÕES DO SUPABASE
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =============================================================================
NEXT_PUBLIC_APP_NAME=Mozaia
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# =============================================================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# CONFIGURAÇÕES DE ANALYTICS (OPCIONAL)
# =============================================================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# CONFIGURAÇÕES DE MAPS (OPCIONAL)
# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# CONFIGURAÇÕES DE CDN/STORAGE
# =============================================================================
NEXT_PUBLIC_CDN_URL=https://cdn.mozaia.mz
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760  # 10MB

# =============================================================================
# CONFIGURAÇÕES DE WEBSOCKETS (FUTURO)
# =============================================================================
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENABLE_REALTIME=false
