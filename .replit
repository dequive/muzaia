modules = ["nodejs-20", "python-3.12", "web", "bash"]
run = "run"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd frontend && npm run start"]
build = ["sh", "-c", "cd frontend && npm run build"]

[workflows]
runButton = "Start Frontend Dev"

[[workflows.workflow]]
name = "Start Backend"
author = 45133862
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m app.main"

[[workflows.workflow]]
name = "Start Frontend Dev"
author = 45133862
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && rm -rf .next && npm run dev -- -p 5000 -H 0.0.0.0"

[[ports]]
localPort = 3000
externalPort = 80

